<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PersonalTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_orange</item>
        <item name="colorPrimaryDark">@color/color_orange_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/upnavbutton</item>
    </style>

    <style name="ProductionTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_red</item>
        <item name="colorPrimaryDark">@color/color_red_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/upnavbutton</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
    </style>

</resources>
